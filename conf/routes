# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /jp-class-instances                 Api.Endpoints.JpClassInstances.get(startDate: Option[String])
GET     /ap-class-instances                 Api.Endpoints.ApClassInstances.get(startDate: Option[String])
GET     /jp-teams                           Api.Endpoints.JpTeams.get()
GET     /weather                            Api.Endpoints.Weather.get()
GET     /users                              Api.Endpoints.Users.get(userID: Option[Int])
POST    /user                               Api.Endpoints.UserCrud.post()
POST    /report                             Api.Endpoints.ReportingAPI.RunReport.post()
GET     /reporting/get-report-run-options   Api.Endpoints.ReportingAPI.GetReportRunOptions.get()
GET     /auth/getPwHash                     Api.Endpoints.Security.GetPwHashForUser.get(userName: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
